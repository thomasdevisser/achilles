{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "color": "#FFF5E1",
          "name": "Base",
          "slug": "base"
        },
        {
          "color": "#781C68",
          "name": "Contrast",
          "slug": "contrast"
        },
        {
          "color": "#000",
          "name": "Black",
          "slug": "black"
        }
      ]
    },
    "layout": {
      "contentSize": "650px",
      "wideSize": "1000px"
    },
    "spacing": {
      "customSpacingSize": false,
      "spacingScale": {
        "operator": "+",
        "increment": 0.5,
        "steps": 7,
        "mediumStep": 1.5,
        "unit": "rem"
      },
      "units": [
        "px",
        "rem"
      ]
    },
    "typography": {
      "dropCap": false,
      "fluid": false,
      "fontFamilies": [
        {
          "fontFamily": "Arial",
          "name": "Arial",
          "slug": "arial"
        },
        {
          "fontFamily": "Helvetica",
          "name": "Helvetica",
          "slug": "helvetica"
        }
      ],
      "fontSizes": [
        {
          "size": "1rem",
          "name": "Small",
          "slug": "small"
        },
        {
          "size": "1.5rem",
          "name": "Medium",
          "slug": "medium"
        },
        {
          "size": "2.5rem",
          "name": "Large",
          "slug": "large"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--helvetica)"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "0"
        },
        "color": {
          "background": "var(--wp--preset--color--contrast)",
          "text": "var(--wp--preset--color--base)"
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--black)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "3rem",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "2rem",
          "lineHeight": "1.2"
        }
      },
      "heading": {
        "typography": {
          "letterSpacing": "-0.02rem",
          "fontWeight": "300"
        }
      }
    }
  }
}